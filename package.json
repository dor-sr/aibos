{
  "name": "aibos",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@aibos/web",
    "dev:worker": "turbo dev --filter=@aibos/worker",
    "build": "turbo build",
    "build:web": "turbo build --filter=@aibos/web",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "turbo db:generate --filter=@aibos/data-model",
    "db:push": "turbo db:push --filter=@aibos/data-model",
    "db:studio": "turbo db:studio --filter=@aibos/data-model",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}






